<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Node.js</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <% include ../../partials/style %>
    <link rel="stylesheet" href="css/dataTables.bootstrap.min.css">
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <% include ../../partials/header %>

        <% include ../../partials/main_sidebar %>

        <div class="content-wrapper">
            <section class="content-header">
                <h1>
                    Users
                    <small>Blank example to the fixed layout</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <!-- <li><a href="#">Layout</a></li> -->
                    <li class="active">Fixed</li>
                </ol>
            </section>

            <section class="content">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Users Information
                            <button class="pull-right">Create</button>
                        </h3>
                    </div>
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% customers.forEach(function(customer) { %>
                                <tr>
                                    <td><%= customer.id %></td>
                                    <td><%= customer.name %></td>
                                    <td><%= customer.address %></td>
                                    <td>
                                        <a href="/edit/<%= customer.id %>" class="btn btn-primary btn-xs">Edit</a>
                                    </td>
                                    <td>
                                        <a href="/delete/<%= customer.id %>" class="btn btn-danger btn-xs">Delele</a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>

            </section>

        </div>

        <% include ../../partials/footer %>

        <% include ../../partials/control_sidebar %>
    </div>

    <% include ../../partials/script %>
    <script src="js/jquery.dataTables.min.js"></script>
    <script src="js/dataTables.bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
</body>

</html>